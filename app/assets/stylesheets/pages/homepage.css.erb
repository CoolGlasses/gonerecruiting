#homepageHeader {
    text-align: center;
    color: whitesmoke;
    margin: 0px;
    margin-top: 50px;
}

#homePageCardsContainer {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    grid-gap: 25px;
    padding: 50px;
    width: 75%;
    margin-top: 25px;
    justify-self: center;
}

#productPreviewContainer {
    display: grid;
    grid-row: 1 / 4;
    grid-column: 2 / 4;
    background: #36454F;
    border-radius: 6px;
    grid-template-rows: 1fr 9fr;
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 -12.5px 12px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray;
}

#productPreviewMainHeader {
    display: grid;
    text-align: center;
}

#productPreviewContent {
    display: grid;
    grid-row: 2 / 3;
    grid-template-rows: 1fr 3fr 1fr 3fr 1fr 3fr 1fr 3fr;
    justify-content: center;
    text-align: center;
}

#aboutCardContainer {
    display: grid;
    border-radius: 6px;
    background: #36454F;
    color: black;
    justify-content: center;
    align-items: center;
    grid-column: 1 / 2;
    grid-row: 3 / 4;
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray,
        0 12.5px 12px gray;
}

#aboutCardHeader {
    text-align: center;
    font-size: 36px;
    color: white;
}

#aboutCardContent {
    display: grid;
    grid-gap: 6px;
    background-color: whitesmoke;
    border-style: solid;
    border-color: black;
    border-width: 3px;
    border-radius: 8px;
    padding: 8px;
    margin: 8px;
    width: 90%;
    justify-self: center;
}

#productsCardContainer {
    display: grid;
    border-radius: 6px;
    background: #36454F;
    justify-content: center;
    align-items: center;
    grid-column: 4 / 5;
    grid-row: 1 / 3;
    grid-template-rows: 1fr 7fr;
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 -12.5px 12px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray;
}

#productsCardHeader {
    display: grid;
    font-size: 36px;
    padding: 6px;
    justify-content: center;
    grid-row: 1 / 2;
}

#productsCardContent {
    display: grid;
    font-size: 18px;
    padding: 6px;
    justify-content: center;
    grid-row: 2 / 3;
    grid-template-rows: 3fr 3fr 1fr ;

}

#focusProduct {
    display: grid;
    grid-row: 1 / 2;
}

#seePlansForm {
    display: grid;
    grid-row: 3 / 4;
}

#seePlansButton {
    display: grid;
    margin-top: 24px;
    max-height: 35px;
    justify-self: center;
    align-items: center;
    background-color: darkgray;
}

#seePlansButton:hover {
    background-color: whitesmoke;
}

#homepage-paypal-button-container {
    display: grid;
    grid-row: 2 / 3;
}

#newsReleasesCardContainer {
    display: grid;
    border-radius: 6px;
    color: black;
    background: #36454F;
    justify-content: center;
    align-items: center;
    grid-row: 2 / 3;
    grid-column: 1 / 2;
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -4.7px 4.3px gray,
        0 -8.5px 12px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray;
}

#newsReleasesHeader {
    text-align: center;
    font-size: 36px;
}

#newsReleasesList {
    display: grid;
    overflow: scroll;
    grid-gap: 8px;
}

#newsItem1 {
    display: grid;
    grid-gap: 6px;
    background-color: whitesmoke;
    border-style: solid;
    border-color: black;
    border-width: 3px;
    border-radius: 8px;
    padding: 8px;
    width: 90%;
    justify-self: center;
}

#newsItem2 {
    display: grid;
    grid-gap: 6px;
    background-color: slategray;
    border-style: solid;
    border-color: black;
    border-radius: 8px;
    padding: 8px;
    width: 90%;
    justify-self: center;
}

#aboutCardHeader {
    display: grid;
    padding: 6px;
    justify-content: center;
}

#aboutCardContent {
    display: grid;
    text-align: center;
}

#signup {
    display: grid;
    grid-column: 2 / 3;
    justify-self: center;
    max-height: 50px;
    align-self: center;
}

#login {
    display: grid;
    grid-row: 2 / 3;
    justify-self: center;
    max-height: 50px;
    align-self: center;
}

#loginCardContainer {
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 -12.5px 12px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray;
    background: #36454F;
    border-radius: 6px;
    display: grid;
    justify-content: center;
    grid-template-rows: 1fr 1fr;
    padding: 20px;
    grid-row: 1 / 2;
    grid-column: 1 / 2;
    align-content: center;
}

#loginCardHeader {
    display: grid;
    grid-row: 1 / 2;
}