h1 {
    text-align: center;
    color: whitesmoke;
}

h3 {
    text-align: center;
    color: whitesmoke;
}

#tableContainer {
    display: grid;
    background-color: #36454F;
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 -12.5px 12px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray,
        0 12.5px 12px gray; 
    width: 90%;
    justify-self: center;
    border-radius: 12px;
}

#myInput {
    background-image: ;
    /* Add a search icon to input */
    background-position: 10px 12px;
    /* Position the search icon */
    background-repeat: no-repeat;
    /* Do not repeat the icon image */
    width: 55%;
    /* Full-width */
    font-size: 16px;
    /* Increase font-size */
    padding: 12px 20px 12px 40px;
    /* Add some padding */
    border: 1px solid #ddd;
    /* Add a grey border */
    margin-bottom: 12px;
    /* Add some space below the input */
}

#filterBar {
    display: grid;
    grid-gap: 16px;
    grid-template-columns: auto auto auto auto auto;
    grid-template-rows: 40px 40px;
    max-width: 70%;
    text-align: center;
    margin-right: auto;
    margin-left: auto;
    border-collapse: collapse;
    border: 1px solid #ddd;
    box-shadow:
        0 -2.8px 2.2px black,
        0 -6.7px 6.3px black,
        0 -12.5px 12px black,
        0 2.8px 2.2px black,
        0 6.7px 6.3px black,
        0 12.5px 12px black;
    border-radius: 4px;
}

#nameSearch {
    overflow: hidden;
}

#schoolSearch {
   overflow: hidden;
}

#gradeSelector {
   overflow: hidden;
}

#positionSelector {
   overflow: hidden;
}

#heightSelector {
   overflow: hidden;
}


#submitButton {
    grid-column: 3 / 4;
    overflow: hidden;
}

#myTable {
    margin-right: auto;
    margin-left: auto;
    border-collapse: separate;
    border-spacing: 0px;
    border-radius: 4px;
    border: 1px solid #ddd;
    /* Add a grey border */
    font-size: 18px;
    /* Increase font-size */
    background-color: lightgray;
    box-shadow:
        0 -2.8px 2.2px black, 0 -6.7px 6.3px black, 0 -12.5px 12px black, 0 2.8px 2.2px black, 0 6.7px 6.3px black, 0 12.5px 12px black;
    grid-row-gap: 15px;
    display: grid;
    align-content: start;
    justify-self: center;
}

#myTable th,
#myTable td {
    text-align: center;
    /* Left-align text */
    padding: 12px;
    /* Add padding */
}

#myTable tr {
    /* Add a bottom border to all table rows */
    border-bottom: 1px solid #ddd;
}

#myTable tr.header,
#myTable tr:hover {
    /* Add a grey background color to the table header and on hover */
    background-color: #f1f1f1;
}

select {
    display: grid;
    width: 100%;
}