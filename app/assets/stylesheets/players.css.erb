#filterBar {
    display: grid;
    grid-gap: 16px;
    grid-template-columns: auto auto auto auto auto;
    grid-template-rows: 40px 40px;
    text-align: center;
    margin-right: auto;
    margin-left: auto;
    border-collapse: collapse;
    border: 1px solid #ddd;
    box-shadow:
        0 -2.8px 2.2px black,
        0 -6.7px 6.3px black,
        0 -12.5px 12px black,
        0 2.8px 2.2px black,
        0 6.7px 6.3px black,
        0 12.5px 12px black;
    border-radius: 4px;
    grid-column: 2 / 3;
}

