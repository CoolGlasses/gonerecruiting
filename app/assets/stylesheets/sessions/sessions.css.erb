#loginContainer {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
}

#loginBox {
    display: grid;
    grid-column: 2 / 3;
    background-color: #36454F;
    border-radius: 8px;
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 -12.5px 12px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray,
        0 12.5px 12px gray;
}

#loginWelcomeText {
    padding-top: 80px;
}

#loginForm {
    display: grid;
    justify-self: center;
    grid-gap: 6px;
    grid-template-columns: 1fr 3fr;
    grid-template-rows: 1fr 1fr 1fr;
    color: black;
}

#loginFormLoginButton {
    display: grid;
    justify-self: center;
    color: black;
    grid-row: 3 / 4;
    grid-column: 1 / 3;
}


#forgotPasswordLinkDiv {
    display: grid;
    grid-row: 3 / 4;
    justify-self: center;
}

#forgotPasswordLinkDiv>a {
    color: white;
}

#forgotPasswordLinkDiv>a:hover {
    color: yellow;
}

#usernameLabel {
    display: grid;
    grid-column: 1 / 2;
    grid-row: 1 / 2;
    align-content: center;
}

#user_username {
    display: grid;
    grid-column: 2 / 3;
    grid-row: 1 / 2;
}

#passwordLabel {
    display: grid;
    grid-column: 1 / 2;
    grid-row: 2 / 3;
    align-content: center;
}

#user_passward {
    display: grid;
    grid-column: 2 / 3;
    grid-row: 2 / 3;
}

