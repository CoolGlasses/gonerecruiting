#aboutCardHeader {
    display: grid;
    padding: 6px;
    justify-content: center;
}

#aboutCardContent {
    display: grid;
    text-align: center;
}


#signup {
    display: grid;
    grid-column: 2 / 3;
    justify-self: center;
    max-height: 50px;
    align-self: center;
}

#login {
    display: grid;
    grid-column: 1 / 2;
    justify-self: center;
    max-height: 50px;
    align-self: center;
}

#loginCardContainer {
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 -12.5px 12px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray;
    background: #36454F;
    border-radius: 5px;
    display: grid;
    justify-content: center;
    grid-template-columns: 1fr 1fr;
    padding: 20px;
}
