#goToDatabase {
    text-align: center;
}

#loginWelcomeText {
    padding-top: 80px;
}

#homePageCardsContainer {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    grid-gap: 25px;
    padding: 50px;
    width: 75%;
    margin-top: 25px;
    justify-self: center;
}


#aboutCardContainer {
    display: grid;
    background: #36454F;
    justify-content: center;
    align-items: center;
    grid-column: 2 / 3;
    grid-row: 1 / 2;
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 -12.5px 12px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray;
}

#productsCardContainer {
    display: grid;
    background: #36454F;
    justify-content: center;
    align-items: center;
    grid-column: 3 / 4;
    grid-row: 1 / 3;
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 -12.5px 12px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray;
}

#newsReleasesCardContainer {
    display: grid;
    background: #36454F;
    justify-content: center;
    align-items: center;
    grid-row: 2 / 4;
    grid-column: 1 / 3;
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray,
        0 12.5px 12px gray;
}

#loginForm {
    display: grid;
    justify-self: center;
    grid-column: 2 / 3;
    grid-gap: 6px;
}

#loginFormLoginButton {
    justify-self: center;
}


#forgotPasswordLinkDiv {
    display: grid;
    grid-column: 2 / 3;
    justify-self: center;
    padding-top: 14px;
}

#forgotPasswordLinkDiv>a {
    color: white;
}

#forgotPasswordLinkDiv>a:hover {
    color: yellow;
}

#usernameLabel {
    display: grid;
    margin-top: 12px;
}