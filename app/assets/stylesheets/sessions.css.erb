#goToDatabase {
    text-align: center;
}

#loginBox {
    justify-content: center;
    align-items: center;
    margin: 5px;
    display: grid;
    width: inherit;
    text-align: center;
    grid-template-columns: 40% 20% 40%;
}

#login {
    grid-column: 1 / 2;
}

#signup {
    grid-column: 3 / 4;
}

#loginContainer {
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 -12.5px 12px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray,
        0 12.5px 12px gray; 
    min-height: 200px;
    width: 50vw;
    margin: 100px auto;
    background: #36454F;
    border-radius: 5px;
    display: grid;
    justify-content: center;
}

#loginForm {
    display: grid;
    justify-self: center;
}