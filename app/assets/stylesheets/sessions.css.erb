#goToDatabase {
    text-align: center;
}

#loginWelcomeText {
    padding-top: 80px;
}

#loginForm {
    display: grid;
    justify-self: center;
    grid-column: 2 / 3;
    grid-gap: 6px;
}

#loginFormLoginButton {
    justify-self: center;
}


#forgotPasswordLinkDiv {
    display: grid;
    grid-column: 2 / 3;
    justify-self: center;
    padding-top: 14px;
}

#forgotPasswordLinkDiv>a {
    color: white;
}

#forgotPasswordLinkDiv>a:hover {
    color: yellow;
}

#usernameLabel {
    display: grid;
    margin-top: 12px;
}