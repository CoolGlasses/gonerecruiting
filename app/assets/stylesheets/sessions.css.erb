#goToDatabase {
    text-align: center;
}

#loginWelcomeText {
    padding-top: 80px;
}

#loginBox {
    justify-content: center;
    align-items: center;
    margin: 5px;
    display: grid;
    width: inherit;
    text-align: center;
    grid-template-columns: 1fr 1fr 1fr;
}

#login {
    grid-column: 1 / 2;
}

#signup {
    grid-column: 3 / 4;
}

#loginContainer {
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 -12.5px 12px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray,
        0 12.5px 12px gray; 
    min-height: 200px;
    width: 50vw;
    margin: 100px auto;
    background: #36454F;
    border-radius: 5px;
    display: grid;
    justify-content: center;
    grid-template-columns: 1fr 1fr 1fr;
}

#loginForm {
    display: grid;
    justify-self: center;
    grid-column: 2 / 3;
    grid-gap: 6px;
}

#loginFormLoginButton {
    justify-self: center;
}


#forgotPasswordLinkDiv {
    display: grid;
    grid-column: 2 / 3;
    justify-self: center;
    padding-top: 14px;
}

#forgotPasswordLinkDiv > a {
    color: white;
}

#forgotPasswordLinkDiv > a:hover {
    color: yellow;
}



