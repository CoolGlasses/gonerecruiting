h1 {
    text-align: center;
    color: whitesmoke;
}

h3 {
    text-align: center;
    color: whitesmoke;
    grid-column: 2 / 3;
}

#tableContainer {
    display: grid;
    background-color: #36454F;
    box-shadow:
        0 -2.8px 2.2px gray,
        0 -6.7px 6.3px gray,
        0 -12.5px 12px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray,
        0 12.5px 12px gray;
    width: 90%;
    justify-self: center;
    border-radius: 12px;
    grid-template-columns: 1fr 8fr 1fr;
}

#playerIndexSigning {
    color: black;
}


#myTable {
    border-collapse: separate;
    border-spacing: 0px;
    border-radius: 4px;
    border: 1px solid #ddd;
    background-color: lightgray;
    box-shadow:
        0 -2.8px 2.2px black,
        0 -6.7px 6.3px black,
        0 -12.5px 12px black,
        0 2.8px 2.2px black,
        0 6.7px 6.3px black,
        0 12.5px 12px black;
    grid-row-gap: 15px;
    display: grid;
    align-content: start;
    justify-self: center;
    color: black;
    grid-column: 2 / 3;
}

#myTable th,
#myTable td {
    text-align: center;
    padding: 12px;
}

#myTable tr {
    border-bottom: 1px solid black;
    background-color: lightgray;
}

#myTable tr.header {
    background-color: #f1f1f1;
}
#myTable tr:hover {
    /* Add a grey background color to the table header and on hover */
    background-color: darkgray;
}


#playerDatabaseRow {
    overflow: hidden;
}

#playerHeight {
    width: 30px;
}

#playerNumber {
    width: 30px;
}

#playerName {
    text-align: center;
}

#playerPosition {
    width: 30px;
    text-align: center;
}

#playerGrade {
    width: 20px;
    text-align: center;

}

#playerSchool {
    text-align: center;
}

#playerRecruit {
    justify-content: center;
}

.arrow-right {
    display: grid;
    width: 0;
    height: 0;
    align-self: center;
    grid-row: 1;
    grid-column: 2 / 3;
    border-top: 5px solid transparent;
    border-bottom: 5px solid transparent;
    border-left: 5px solid black;
}

.arrow-down {
    display: grid;
    width: 0;
    height: 0;
    align-self: center;
    grid-row: 1;
    grid-column: 2 / 3;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;

    border-top: 5px solid black;
}

.arrow-up {
    display: grid;
    width: 0;
    height: 0;
    align-self: center;
    grid-row: 1;
    grid-column: 2 / 3;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;

    border-bottom: 5px solid black;
}

#filterBar {
    display: grid;
    grid-gap: 16px;
    grid-template-columns: auto auto auto auto auto;
    grid-template-rows: 40px 40px;
    text-align: center;
    margin-right: auto;
    margin-left: auto;
    margin-top: 13px;
    border-collapse: collapse;
    border: 1px solid #ddd;
    box-shadow:
        0 -2.8px 2.2px black,
        0 -6.7px 6.3px black,
        0 -12.5px 12px black,
        0 2.8px 2.2px black,
        0 6.7px 6.3px black,
        0 12.5px 12px black;
    border-radius: 4px;
    grid-column: 2 / 3;
    color: black;
}

select {
    display: grid;
    width: 100%;
}


#nameSearch {
    display: grid;
    overflow: hidden;
}

#schoolSearch {
    display: grid;
    overflow: hidden;
}

#gradeSelector {
    display: grid;
    overflow: hidden;
}

#positionSelector {
    display: grid;
    overflow: hidden;
}

#heightSelector {
    display: grid;
    overflow: hidden;
}

#submitButton {
    grid-column: 2 / 3;
    overflow: hidden;
    display: grid;
    border-radius: 6px;
}

#submitButton:hover {
    background-color: gray;
}

#resetButton {
    grid-column: 4 / 5;
    overflow: hidden;
    border-radius: 8px;
}

#resetButton:hover {
    background-color: gray;
}

#dashSpacer {
    display: grid;
    justify-self: center;
    font-size: 35px;
}

#playerNameHeader {
    display: grid;
    justify-self: center;
    font-size: 35px;
}

.pagy-nav {
    display: block;
    grid-row: 5 / 6;
    grid-column: 2 / 3;
    justify-self: center;
    padding: 23px;
    margin-top: 23px;
    border-radius: 8px;
    font-size: 20px;
    background-color: black;
}

.pagy-nav > span {
    display: inline-block;
}

.pagy-nav > span > a {
    color: whitesmoke
}

.pagy-nav > span > a:hover {
    color: yellow;
}

.pagy-nav > span.page.active {
    background-color: gray;
    color: black;
    border-radius: 8px;
    padding: 8px;
}