body {
    background: #EEF2F7;
    background-image: url('<%= image_url 'background-court.jpg' %>');
    display: grid;
}

header {
    background-color: #36454F;
    width: 100%;
    min-height: 50px;
    display: grid;
    grid-template-columns: 50% 30% 10% 10%;
    align-content: center;
    box-shadow:
        0 -2.8px 2.2px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray,
        0 12.5px 12px gray; 
}

#headerTitle {
    display: grid;
    justify-self: left;
    padding-left: 19px;
}

#headerTitle > a {
    color: whitesmoke;
    display: grid;
}

#headerTitle > a:hover {
    color: yellow;
}

#headerLinksBox {
    display: grid;
    grid-column: 3 / 5;
    grid-template-columns: 50% 50%;
    align-content: center;
}

#signin1 {
    display: grid;
    color: whitesmoke;
    grid-column: 1;
    justify-content: center;
}

#signin1:hover {
    color: yellow;
}

#signup1:hover {
    color: yellow;
}

#signup1 {
    display: grid;
    color: whitesmoke; 
    grid-column: 2;
    justify-content: center;
}
