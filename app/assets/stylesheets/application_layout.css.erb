body {
    background: black;
    display: grid;
    color: white;
}

header {
    margin-top: 20px;
    background-color: #36454F;
    justify-self: center;
    width: 90%;
    min-height: 50px;
    display: grid;
    grid-template-columns: 50% 20% 15% 15%;
    align-content: center;
    border-radius: 12px;
    box-shadow:
        0 -2.8px 2.2px gray,
        0 2.8px 2.2px gray,
        0 6.7px 6.3px gray,
        0 12.5px 12px gray; 
}

#headerTitle {
    display: grid;
    justify-self: left;
    padding-left: 19px;
}

#headerTitle > a {
    color: whitesmoke;
    display: grid;
}

#headerTitle > a:hover {
    color: yellow;
}

#headerLinksBox {
    display: grid;
    grid-column: 3 / 5;
    grid-template-columns: 50% 50%;
    align-content: center;
}

#signin1 {
    display: grid;
    color: whitesmoke;
    grid-column: 1;
    justify-content: center;
}

#signin1:hover {
    color: yellow;
}

#signup1:hover {
    color: yellow;
}

#signup1 {
    display: grid;
    color: whitesmoke; 
    grid-column: 2;
    justify-content: center;
}

#logoutButtonForm {
    justify-self: center;
    align-self: center;
}

#headerUsername {
    justify-self: center;
    align-self: center;
    display: grid;
    grid-column: 1 / 2;
}

#playerName a {
    color: black;
}

header a:visited,
#linkBackToDatabase a:visited {
    color: whitesmoke;
}

#playerName a:visited {
    color: black;
}

header a:hover,
#linkBackToDatabase a:hover {
    color: yellow;
}

#playerName a:hover {
    color: blue;
}



