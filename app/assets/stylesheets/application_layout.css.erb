body {
    background: #EEF2F7;
}

header {
    background-color: #36454F;
    width: 100%;
    min-height: 50px;
    display: grid;
    grid-template-columns: 50% 30% 10% 10%;
    align-content: center;
}

#headerTitle {
    display: grid;
    justify-self: left;
    padding-left: 19px;
}

#headerTitle > a {
    color: whitesmoke;
    display: grid;
}

#headerTitle > a:hover {
    color: yellow;
}

#headerLinksBox {
    display: grid;
    grid-column: 3 / 5;
    grid-template-columns: 50% 50%;
    align-content: center;
}

#signin1 {
    display: grid;
    color: whitesmoke;
    grid-column: 1;
    justify-content: center;
}

#signin1:hover {
    color: yellow;
}

#signup1:hover {
    color: yellow;
}

#signup1 {
    display: grid;
    color: whitesmoke; 
    grid-column: 2;
    justify-content: center;
}
