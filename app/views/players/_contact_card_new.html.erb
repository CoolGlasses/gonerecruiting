<form action="/contact_cards" method="post" id="contactCardForm" remote: "false">
    <label for="cellPhone" id="cellLabel">Cell:</label>
    <input type="text" id="cellPhone" name="contact_card[cell]">
    <label for="email" id="emailLabel">Email:</label>
    <input type="email" id="email" name="contact_card[email]">
    <label for="homePhone" id="homePhoneLabel">Home:</label>
    <input type="text" id="homePhone" name="contact_card[phone]">
    <label for="street" id="streetLabel">Street:</label>
    <input type="text" id="street" name="contact_card[street]">
    <label for="city" id="cityLabel">City:</label>
    <input type="text" id="city" name="contact_card[city]">
    <label for="state" id="stateLabel">State:</label>
    <input type="text" id="state" name="contact_card[state]">
    <label for="zip" id="zipLabel">Zip:</label>
    <input type="number" id="zip" name="contact_card[zip]">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" id="contactCardPlayerID" name="contact_card[player_id]" value= <%= @player.id %> >
    <input type="hidden" id="contactCardUserID" name="contact_card[user_id]" value= <%= current_user.id %> >
    <input type="submit" id="contactCardEditButton" value="Submit">
</form>